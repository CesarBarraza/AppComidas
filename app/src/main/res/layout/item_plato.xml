<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:orientation="vertical"
    app:cardCornerRadius="15dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <ImageView
            android:id="@+id/ivPlatoImg"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"/>
        <TextView
            android:id="@+id/tvTipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Apto celiacos"
            android:textSize="12sp"
            android:textColor="#FF9800"
            app:layout_constraintTop_toBottomOf="@+id/ivPlatoImg"
            tools:ignore="MissingConstraints" />

        <View
            android:id="@+id/vLike"
            android:layout_width="32sp"
            android:layout_height="32sp"
            android:padding="10dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@mipmap/corazon_item_plato_icon"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/ivPlatoImg"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Ensalada de frutas"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginLeft="20dp" />

        <TextView
            android:id="@+id/tvPrecio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintLeft_toRightOf="@+id/ivPlatoImg"
            android:text="$30.00"
            android:textSize="14sp"
            android:layout_marginLeft="20dp"
            android:textColor="#A39E9E"/>

        <TextView
            android:id="@+id/tvDeliveri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tvPrecio"
            app:layout_constraintLeft_toRightOf="@+id/ivPlatoImg"
            android:drawableLeft="@drawable/estrella_icon"
            android:textSize="12sp"
            android:gravity="center"
            android:text="Delivery gratis"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>